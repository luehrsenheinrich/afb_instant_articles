<?xml version="1.0"?>
<ruleset name="WordPress LH">
	<description>Some additional rule settings for development at Luehrsen // Heinrich</description>

	<rule ref="WordPress-Extra"/>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" value="allfacebook-instant-articles" />
		</properties>
	</rule>

	<rule ref="WordPress.Files">
		<exclude name="WordPress.Files.FileName"/>
	</rule>

	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<properties>
				<property name="customPropertiesWhitelist" type="array" value="preserveWhiteSpace,anotherProperty,andYetAnother"/>
		</properties>
	</rule>
</ruleset>
